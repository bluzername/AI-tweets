# ===================================================================
# PODCASTS TLDR - AUTONOMOUS PIPELINE CONFIGURATION
# ===================================================================

# -------------------------------------------------------------------
# OpenAI Configuration
# -------------------------------------------------------------------
OPENAI_API_KEY=your_openai_api_key_here
WHISPER_MODEL=whisper-1
GPT_MODEL=gpt-4-turbo-preview

# -------------------------------------------------------------------
# X.com API Credentials for Main Account
# -------------------------------------------------------------------
MAIN_API_KEY=your_x_api_key
MAIN_API_SECRET=your_x_api_secret
MAIN_ACCESS_TOKEN=your_x_access_token
MAIN_ACCESS_TOKEN_SECRET=your_x_access_token_secret
MAIN_BEARER_TOKEN=your_x_bearer_token

# -------------------------------------------------------------------
# X.com API Credentials for Casual Account
# -------------------------------------------------------------------
CASUAL_API_KEY=your_x_api_key
CASUAL_API_SECRET=your_x_api_secret
CASUAL_ACCESS_TOKEN=your_x_access_token
CASUAL_ACCESS_TOKEN_SECRET=your_x_access_token_secret
CASUAL_BEARER_TOKEN=your_x_bearer_token

# -------------------------------------------------------------------
# Basic Pipeline Configuration
# -------------------------------------------------------------------
DAYS_BACK=7
MAX_HIGHLIGHTS=3
DRY_RUN=false

# -------------------------------------------------------------------
# AUTONOMOUS ORCHESTRATION
# Enable 24/7 automated operation
# -------------------------------------------------------------------

# Discovery interval (seconds) - how often to check for new episodes
# Default: 3600 (1 hour)
DISCOVERY_INTERVAL=3600

# Processing interval (seconds) - how often to process pending episodes
# Default: 1800 (30 minutes)
PROCESSING_INTERVAL=1800

# Health check interval (seconds) - how often to run health checks
# Default: 300 (5 minutes)
HEALTH_CHECK_INTERVAL=300

# Max episodes to process per cycle
# Default: 5
MAX_EPISODES_PER_CYCLE=5

# Max concurrent processing threads
# Default: 3
MAX_CONCURRENT_PROCESSING=3

# -------------------------------------------------------------------
# RESOURCE LIMITS
# Prevent runaway resource usage
# -------------------------------------------------------------------

# Maximum memory usage in MB before throttling
MAX_MEMORY_MB=2048

# Maximum CPU usage percentage before throttling
MAX_CPU_PERCENT=80

# -------------------------------------------------------------------
# SAFETY LIMITS
# Cost and rate limit protection
# -------------------------------------------------------------------

# Maximum API cost per day (USD)
MAX_API_COST_PER_DAY=50.0

# Maximum tweets per day (across all accounts)
MAX_TWEETS_PER_DAY=100

# -------------------------------------------------------------------
# OPERATING HOURS (UTC)
# Set to limit when the system operates (optional)
# Leave blank for 24/7 operation
# -------------------------------------------------------------------

# Operating hours start (0-23, UTC) - e.g., 6 for 6 AM UTC
OPERATING_HOURS_START=

# Operating hours end (0-23, UTC) - e.g., 22 for 10 PM UTC
OPERATING_HOURS_END=

# Quiet hours start (0-23, UTC) - pause processing during these hours
# Example: 1 for 1 AM UTC
QUIET_HOURS_START=

# Quiet hours end (0-23, UTC)
# Example: 6 for 6 AM UTC
QUIET_HOURS_END=

# -------------------------------------------------------------------
# ALERTING CONFIGURATION
# Email, Slack, and webhook notifications
# -------------------------------------------------------------------

# Email Alerts
ALERT_EMAIL_ENABLED=false
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
ALERT_EMAIL_FROM=your_email@gmail.com
ALERT_EMAIL_TO=admin@example.com,devops@example.com

# Slack Alerts
ALERT_SLACK_ENABLED=false
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Custom Webhook Alerts
ALERT_WEBHOOK_ENABLED=false
ALERT_WEBHOOK_URL=https://your-webhook-endpoint.com/alerts

# Alert throttling (minutes) - minimum time between same alerts
ALERT_THROTTLE_MINUTES=30

# -------------------------------------------------------------------
# RETRY CONFIGURATION
# Automatic retry with exponential backoff
# -------------------------------------------------------------------

# Maximum retry attempts for failed operations
MAX_RETRIES=3

# Initial retry delay (seconds)
RETRY_DELAY=60

# -------------------------------------------------------------------
# LOGGING
# -------------------------------------------------------------------
LOG_LEVEL=INFO